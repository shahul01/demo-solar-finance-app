{
	"name": "demo-solar-finance-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "node build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prebuild": "node scripts/init-db-dir.js",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx scripts/seed.ts",
		"db:check": "tsx scripts/check-db.ts",
		"db:setup": "pnpm run db:push && pnpm run db:seed",
		"db:reset": "rm -f solar-finance.db && pnpm run db:setup"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.1",
		"@vercel/postgres": "^0.10.0",
		"better-sqlite3": "^11.8.0",
		"drizzle-orm": "^0.40.0",
		"lucide-svelte": "^0.525.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-node": "^5.2.13",
		"@sveltejs/adapter-vercel": "^5.8.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/better-sqlite3": "^7.6.12",
		"@types/node": "^20",
		"@vitest/browser": "^3.2.3",
		"dotenv": "^16.6.1",
		"drizzle-kit": "^0.30.6",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.20.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"better-sqlite3"
		]
	}
}